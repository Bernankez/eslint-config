{
  "name": "@bernankez/eslint-config",
  "type": "module",
  "version": "4.0.0",
  "packageManager": "pnpm@10.22.0",
  "description": "Cole's ESLint config",
  "author": {
    "name": "Cole",
    "email": "bernankeic@gmail.com",
    "url": "https://github.com/Bernankez"
  },
  "license": "MIT",
  "homepage": "https://github.com/Bernankez/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bernankez/eslint-config.git"
  },
  "bugs": "https://github.com/Bernankez/eslint-config/issues",
  "keywords": [
    "eslint-config"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": "./bin/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsup --format esm,cjs --clean --dts",
    "dev": "tsup --format esm,cjs --watch",
    "fix": "eslint . -f mo --fix",
    "lint": "eslint . -f mo",
    "prepack": "nr build",
    "prepare": "simple-git-hooks",
    "preview": "node --watch bin/index.js",
    "release": "bumpp && npm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "test:once": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "cac": "^6.7.14",
    "defu": "^6.1.4",
    "eslint-flat-config-utils": "^2.1.4",
    "local-pkg": "^1.1.2"
  },
  "devDependencies": {
    "@antfu/ni": "^27.0.1",
    "@types/node": "^24.10.1",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "eslint-formatter-mo": "^2.4.1",
    "lint-staged": "^16.2.6",
    "rimraf": "^6.1.0",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  },
  "simple-git-hooks": {
    "pre-commit": "nlx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
