{
  "name": "@bernankez/eslint-config",
  "type": "module",
  "version": "4.0.1",
  "packageManager": "pnpm@10.30.3",
  "description": "Cole's ESLint config",
  "author": {
    "name": "Cole",
    "email": "bernankeic@gmail.com",
    "url": "https://github.com/Bernankez"
  },
  "license": "MIT",
  "homepage": "https://github.com/Bernankez/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bernankez/eslint-config.git"
  },
  "bugs": "https://github.com/Bernankez/eslint-config/issues",
  "keywords": [
    "eslint-config"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.mts"
      ]
    }
  },
  "bin": "./bin/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=20.19"
  },
  "scripts": {
    "build": "tsdown --format esm,cjs",
    "dev": "nlx @eslint/config-inspector --config eslint.config.ts",
    "build:inspector": "nr build && nlx @eslint/config-inspector build",
    "fix": "eslint . -f mo --fix",
    "lint": "eslint . -f mo",
    "bump": "nlx taze major -w -r --force",
    "prepack": "nr build",
    "prepare": "simple-git-hooks",
    "preview": "node --watch bin/index.js",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "test:once": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@antfu/eslint-config": "catalog:prod",
    "@unocss/eslint-plugin": "catalog:peer",
    "cac": "catalog:prod",
    "defu": "catalog:prod",
    "eslint-flat-config-utils": "catalog:prod",
    "eslint-plugin-format": "catalog:peer",
    "local-pkg": "catalog:prod"
  },
  "devDependencies": {
    "@antfu/ni": "catalog:script",
    "@eslint-react/eslint-plugin": "catalog:peer",
    "@types/node": "catalog:types",
    "bumpp": "catalog:script",
    "eslint": "catalog:peer",
    "eslint-formatter-mo": "catalog:lint",
    "eslint-plugin-astro": "catalog:peer",
    "eslint-plugin-react-hooks": "catalog:peer",
    "eslint-plugin-react-refresh": "catalog:peer",
    "eslint-plugin-solid": "catalog:peer",
    "eslint-plugin-svelte": "catalog:peer",
    "execa": "catalog:test",
    "lint-staged": "catalog:hook",
    "simple-git-hooks": "catalog:hook",
    "svelte": "catalog:peer",
    "svelte-eslint-parser": "catalog:peer",
    "tinyglobby": "catalog:test",
    "tsdown": "catalog:build",
    "tsx": "catalog:script",
    "typescript": "catalog:types",
    "vite": "catalog:test",
    "vitest": "catalog:test",
    "vue": "catalog:peer"
  },
  "resolutions": {
    "eslint": "catalog:peer"
  },
  "simple-git-hooks": {
    "pre-commit": "nlx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
